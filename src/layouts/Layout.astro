---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  lang?: string;
}

const { 
  title, 
  description = "Payam-e-Seerat Trust - Religious Educational & Welfare Trust based in Golconda, Hyderabad",
  lang = "en" 
} = Astro.props;

const isUrdu = lang === 'ur';
const dir = isUrdu ? 'rtl' : 'ltr';
---

<!DOCTYPE html>
<html lang={lang} dir={dir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#1a5632" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Nastaliq+Urdu:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Payam-e-Seerat Trust",
        "alternateName": "پیام سیرت ٹرسٹ",
        "url": "https://payameseerat.com",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "Ali Ahmed Colony, Near Ali Ahmed Masjid, Golconda",
          "addressLocality": "Hyderabad",
          "addressRegion": "Telangana",
          "addressCountry": "IN"
        },
        "description": "Religious Educational & Welfare Trust based in Golconda, Hyderabad"
      }
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
