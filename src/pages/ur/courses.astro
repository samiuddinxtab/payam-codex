---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import coursesData from '../../content/ur/courses.json';

const { featuredCourse, courseSubjects, trainingTitle, urduTrainingTitle, trainingDescription, urduTrainingDescription, trainingTopics, trainingIncludes } = coursesData;
---

<Layout 
  title="کورسز - پیام سیرت ٹرسٹ"
  description="پیام سیرت ٹرسٹ کے 40 روزہ اسلامی کورس اور اساتذہ کی تربیت کے پروگرام دریافت کریں۔"
  lang="ur"
>
  <Header lang="ur" currentPage="courses" />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-primary text-white py-16 lg:py-24 geo-pattern">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl lg:text-5xl font-bold mb-4 font-urdu">کورسز</h1>
          <p class="text-2xl text-gold">Courses</p>
        </div>
      </div>
    </section>

    <!-- Featured Course -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gradient-to-br from-primary to-primary-dark rounded-2xl p-8 md:p-12 text-white" dir="rtl">
          <div class="flex flex-col md:flex-row gap-8 items-center">
            <div class="flex-1 text-right">
              <span class="inline-block px-3 py-1 bg-gold text-primary-dark text-sm font-bold rounded-full mb-4 font-urdu">
                {featuredCourse.urduBadge}
              </span>
              <h2 class="text-3xl md:text-4xl font-bold mb-2 font-urdu">{featuredCourse.urduName}</h2>
              <p class="text-xl text-gold mb-6">{featuredCourse.name}</p>
              <p class="text-white/90 mb-6 font-urdu leading-loose">{featuredCourse.urduDescription}</p>
              <p class="text-white/80">{featuredCourse.description}</p>
              
              <div class="flex gap-6 mt-8">
                <div>
                  <div class="text-3xl font-bold text-gold font-urdu">{featuredCourse.urduDuration}</div>
                  <div class="text-sm text-white/70">{featuredCourse.duration}</div>
                </div>
                <div class="w-px bg-white/20"></div>
                <div>
                  <div class="text-3xl font-bold text-gold font-urdu">{featuredCourse.urduSubjectsCount}</div>
                  <div class="text-sm text-white/70">{featuredCourse.subjectsCount}</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Course Subjects -->
    <section class="py-16 bg-cream">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-primary mb-2 font-urdu">کورس کے مضامین</h2>
          <p class="text-lg text-gray-600">Course Subjects</p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {courseSubjects.map((subject, index) => (
            <div class="bg-white rounded-lg p-5 shadow-sm card-hover text-right">
              <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center mb-3 mr-auto">
                <span class="text-primary font-bold">{index + 1}</span>
              </div>
              <h3 class="font-semibold text-primary mb-1 font-urdu">{subject.urduName}</h3>
              <p class="text-sm text-gray-600">{subject.name}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Teacher Training -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12 items-center" dir="rtl">
          <div class="text-right">
            <h2 class="text-3xl font-bold text-primary mb-2 font-urdu">{urduTrainingTitle}</h2>
            <p class="text-xl text-gray-600 mb-6">{trainingTitle}</p>
            <p class="text-gray-600 mb-6 font-urdu leading-loose">{urduTrainingDescription}</p>
            <p class="text-gray-500">{trainingDescription}</p>
          </div>
          
          <div class="space-y-6">
            <div>
              <h3 class="font-semibold text-primary mb-4 font-urdu">تربیت کے موضوعات</h3>
              <div class="grid grid-cols-2 gap-3">
                {trainingTopics.map(topic => (
                  <div class="bg-cream rounded-lg p-3 text-right">
                    <div class="font-medium text-sm font-urdu">{topic.urduName}</div>
                    <div class="text-xs text-gray-500">{topic.name}</div>
                  </div>
                ))}
              </div>
            </div>
            
            <div>
              <h3 class="font-semibold text-primary mb-4 font-urdu">تربیت میں شامل</h3>
              <ul class="space-y-2 text-right">
                {trainingIncludes.map(item => (
                  <li class="flex items-start gap-2 justify-end">
                    <div>
                      <span class="text-sm text-gray-600 font-urdu">{item.urduText}</span>
                      <span class="block text-xs text-gray-500">{item.text}</span>
                    </div>
                    <span class="text-gold flex-shrink-0">✓</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer lang="ur" />
</Layout>
