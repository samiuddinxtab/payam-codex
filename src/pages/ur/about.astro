---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import aboutData from '../../content/ur/about.json';
import aboutDataEn from '../../content/en/about.json';

const { intro, regNumber, objectives } = aboutData;
---

<Layout 
  title="ہمارے بارے میں - پیام سیرت ٹرسٹ"
  description="پیام سیرت ٹرسٹ کے بارے میں جانیں، گولکنڈہ، حیدرآباد میں ایک رجسٹرڈ مذہبی تعلیمی و فلاحی ٹرسٹ۔"
  lang="ur"
>
  <Header lang="ur" currentPage="about" />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-primary text-white py-16 lg:py-24 geo-pattern">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl lg:text-5xl font-bold mb-4 font-urdu">ہمارے بارے میں</h1>
          <p class="text-2xl text-gold">About Us</p>
        </div>
      </div>
    </section>

    <!-- Introduction -->
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-cream rounded-2xl p-8 md:p-12">
          <p class="text-lg font-urdu text-gray-700 leading-loose text-right mb-6">{intro}</p>
          <p class="text-lg text-gray-600 leading-relaxed">{aboutDataEn.intro}</p>
          <div class="mt-6 pt-6 border-t border-gray-200 text-right">
            <span class="inline-block px-4 py-2 bg-primary text-white rounded-full text-sm font-medium font-urdu">
              {regNumber}
            </span>
          </div>
        </div>
      </div>
    </section>

    <!-- Objectives -->
    <section class="py-16 bg-cream">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-primary mb-2 font-urdu">ہمارے مقاصد</h2>
          <p class="text-lg text-gray-600">Our Objectives</p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-6">
          {objectives.map((obj, index) => (
            <div class="bg-white rounded-xl p-6 shadow-sm card-hover">
              <div class="flex items-start gap-4" dir="rtl">
                <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                  <span class="text-primary font-bold">{index + 1}</span>
                </div>
                <div class="text-right">
                  <h3 class="text-lg font-semibold text-primary mb-1 font-urdu">{obj.title}</h3>
                  <p class="text-sm text-primary mb-3">{aboutDataEn.objectives[index].title}</p>
                  <p class="text-gray-600 text-sm mb-2 font-urdu leading-relaxed">{obj.text}</p>
                  <p class="text-gray-500 text-sm">{aboutDataEn.objectives[index].text}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer lang="ur" />
</Layout>
