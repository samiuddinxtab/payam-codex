---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import supportData from '../../content/ur/support.json';

const { heroTitle, urduHeroTitle, heroText, urduHeroText, upiTitle, urduUpiTitle, upiText, urduUpiText, bankNote, urduBankNote, tiersTitle, urduTiersTitle, tiersDescription, urduTiersDescription, monthlyLabel, urduMonthlyLabel, yearlyLabel, urduYearlyLabel, mostImpactfulBadge, urduMostImpactfulBadge, tiers, impactTitle, urduImpactTitle, impactItems, contactTitle, urduContactTitle, contactText, urduContactText } = supportData;
---

<Layout 
  title="مدد - پیام سیرت ٹرسٹ"
  description="پیام سیرت ٹرسٹ کے مشن کی حمایت کریں۔ اساتذہ، طلبہ، یا قرآن کی طباعت کے پروگراموں کی کفالت کریں۔"
  lang="ur"
>
  <Header lang="ur" currentPage="support" />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-primary text-white py-16 lg:py-24 geo-pattern">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-4xl lg:text-5xl font-bold mb-4 font-urdu">{urduHeroTitle}</h1>
          <p class="text-2xl text-gold mb-6">{heroTitle}</p>
          <p class="text-lg text-white/90 mb-4 font-urdu leading-loose">{urduHeroText}</p>
          <p class="text-white/80">{heroText}</p>
        </div>
      </div>
    </section>

    <!-- Donation Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12" dir="rtl">
          <!-- UPI QR -->
          <div class="bg-cream rounded-2xl p-8 text-center">
            <h2 class="text-2xl font-bold text-primary mb-2 font-urdu">{urduUpiTitle}</h2>
            <p class="text-lg text-gray-600 mb-6">{upiTitle}</p>
            
            <div class="bg-white rounded-xl p-6 mb-6 inline-block">
              <div class="w-48 h-48 bg-gray-200 rounded-lg flex items-center justify-center mx-auto">
                <img src="/upi.png" alt="UPI QR Code" class="w-full h-full object-contain" onerror="this.style.display='none'; this.parentElement.innerHTML='<span class=\\'text-gray-400 font-urdu\\'>کیو آر کوڈ پلیس ہولڈر</span>';" />
              </div>
            </div>
            
            <p class="text-gray-600 mb-2 font-urdu">{urduUpiText}</p>
            <p class="text-gray-500">{upiText}</p>
            
            <div class="mt-6 pt-6 border-t border-gray-200">
              <p class="text-sm text-gray-500 font-urdu">{urduBankNote}</p>
              <p class="text-sm text-gray-400 mt-1">{bankNote}</p>
            </div>
          </div>
          
          <!-- Bank Details -->
          <div class="bg-cream rounded-2xl p-8" dir="rtl">
            <h2 class="text-2xl font-bold text-primary mb-6 font-urdu">بینک ٹرانسفر</h2>
            <div class="space-y-4 text-right">
              <div class="bg-white rounded-lg p-4">
                <div class="text-sm text-gray-500 mb-1 font-urdu">اکاؤنٹ کا نام</div>
                <div class="font-medium">Payam-e-Seerat Trust</div>
              </div>
              <div class="bg-white rounded-lg p-4">
                <div class="text-sm text-gray-500 mb-1 font-urdu">اکاؤنٹ نمبر</div>
                <div class="font-medium font-urdu">تفصیلات کے لیے رابطہ کریں</div>
              </div>
              <div class="bg-white rounded-lg p-4">
                <div class="text-sm text-gray-500 mb-1 font-urdu">آئی ایف ایس سی کوڈ</div>
                <div class="font-medium font-urdu">تفصیلات کے لیے رابطہ کریں</div>
              </div>
              <div class="bg-white rounded-lg p-4">
                <div class="text-sm text-gray-500 mb-1 font-urdu">بینک کا نام</div>
                <div class="font-medium font-urdu">تفصیلات کے لیے رابطہ کریں</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Sponsorship Tiers -->
    <section class="py-16 bg-cream">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-primary mb-2 font-urdu">{urduTiersTitle}</h2>
          <p class="text-lg text-gray-600 mb-4">{tiersTitle}</p>
          <p class="text-gray-600 max-w-2xl mx-auto font-urdu">{urduTiersDescription}</p>
          <p class="text-gray-500 mt-2">{tiersDescription}</p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" dir="rtl">
          {tiers.map(tier => (
            <div class={`rounded-xl p-6 ${tier.highlight ? 'bg-primary text-white' : 'bg-white'}`}>
              {tier.highlight && (
                <span class="inline-block px-3 py-1 bg-gold text-primary-dark text-xs font-bold rounded-full mb-4 font-urdu">
                  {urduMostImpactfulBadge}
                </span>
              )}
              <h3 class={`text-xl font-bold mb-1 font-urdu ${tier.highlight ? 'text-white' : 'text-primary'}`}>
                {tier.urduName}
              </h3>
              <p class={`text-sm mb-4 ${tier.highlight ? 'text-white/80' : 'text-gray-600'}`}>
                {tier.name}
              </p>
              
              <div class="flex gap-4 mb-4" dir="rtl">
                <div>
                  <div class={`text-2xl font-bold ${tier.highlight ? 'text-gold' : 'text-primary'}`}>
                    {tier.monthly}
                  </div>
                  <div class={`text-xs ${tier.highlight ? 'text-white/70' : 'text-gray-500'} font-urdu`}>
                    {urduMonthlyLabel}
                  </div>
                </div>
                <div class={`w-px ${tier.highlight ? 'bg-white/20' : 'bg-gray-200'}`}></div>
                <div>
                  <div class={`text-2xl font-bold ${tier.highlight ? 'text-gold' : 'text-primary'}`}>
                    {tier.yearly}
                  </div>
                  <div class={`text-xs ${tier.highlight ? 'text-white/70' : 'text-gray-500'} font-urdu`}>
                    {urduYearlyLabel}
                  </div>
                </div>
              </div>
              
              <p class={`text-sm mb-2 font-urdu ${tier.highlight ? 'text-white/90' : 'text-gray-600'}`}>
                {tier.urduDescription}
              </p>
              <p class={`text-sm ${tier.highlight ? 'text-white/70' : 'text-gray-500'}`}>
                {tier.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Impact Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-primary mb-2 font-urdu">{urduImpactTitle}</h2>
          <p class="text-lg text-gray-600">{impactTitle}</p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4" dir="rtl">
          {impactItems.map(item => (
            <div class="flex items-start gap-3 bg-cream rounded-lg p-4">
              <span class="text-gold text-xl flex-shrink-0">✓</span>
              <div class="text-right">
                <span class="text-gray-700 font-urdu">{item.urduText}</span>
                <span class="block text-sm text-gray-500">{item.text}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-16 bg-primary geo-pattern text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-4 font-urdu">{urduContactTitle}</h2>
        <p class="text-xl mb-6 text-gold">{contactTitle}</p>
        <p class="text-white/90 mb-4 font-urdu">{urduContactText}</p>
        <p class="text-white/80 mb-8">{contactText}</p>
        <a 
          href="https://wa.me/919533482794" 
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block px-8 py-4 bg-gold text-primary-dark font-semibold rounded-lg hover:bg-gold-light transition-colors shadow-lg font-urdu"
        >
          واٹس ایپ: +91 95334 82794
        </a>
      </div>
    </section>
  </main>
  
  <Footer lang="ur" />
</Layout>
