---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import coursesData from '../../content/en/courses.json';

const { featuredCourse, courseSubjects, trainingTitle, urduTrainingTitle, trainingDescription, urduTrainingDescription, trainingTopics, trainingIncludes } = coursesData;
---

<Layout 
  title="Courses - Payam-e-Seerat Trust"
  description="Explore the 40 Days Islamic Course and teacher training programs offered by Payam-e-Seerat Trust."
  lang="en"
>
  <Header lang="en" currentPage="courses" />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-primary text-white py-16 lg:py-24 geo-pattern">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl lg:text-5xl font-bold mb-4">Courses</h1>
          <p class="text-2xl font-urdu text-gold">کورسز</p>
        </div>
      </div>
    </section>

    <!-- Featured Course -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-gradient-to-br from-primary to-primary-dark rounded-2xl p-8 md:p-12 text-white">
          <div class="flex flex-col md:flex-row gap-8 items-center">
            <div class="flex-1">
              <span class="inline-block px-3 py-1 bg-gold text-primary-dark text-sm font-bold rounded-full mb-4">
                {featuredCourse.badge}
              </span>
              <h2 class="text-3xl md:text-4xl font-bold mb-2">{featuredCourse.name}</h2>
              <p class="text-xl font-urdu text-gold mb-6">{featuredCourse.urduName}</p>
              <p class="text-white/90 mb-6">{featuredCourse.description}</p>
              <p class="font-urdu text-white/80 leading-loose">{featuredCourse.urduDescription}</p>
              
              <div class="flex gap-6 mt-8">
                <div>
                  <div class="text-3xl font-bold text-gold">{featuredCourse.duration}</div>
                  <div class="text-sm text-white/70">{featuredCourse.urduDuration}</div>
                </div>
                <div class="w-px bg-white/20"></div>
                <div>
                  <div class="text-3xl font-bold text-gold">{featuredCourse.subjectsCount}</div>
                  <div class="text-sm text-white/70">{featuredCourse.urduSubjectsCount}</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Course Subjects -->
    <section class="py-16 bg-cream">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-primary mb-2">Course Subjects</h2>
          <p class="text-lg font-urdu text-gray-600">کورس کے مضامین</p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {courseSubjects.map((subject, index) => (
            <div class="bg-white rounded-lg p-5 shadow-sm card-hover">
              <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center mb-3">
                <span class="text-primary font-bold">{index + 1}</span>
              </div>
              <h3 class="font-semibold text-primary mb-1">{subject.name}</h3>
              <p class="text-sm font-urdu text-gray-600">{subject.urduName}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Teacher Training -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h2 class="text-3xl font-bold text-primary mb-2">{trainingTitle}</h2>
            <p class="text-xl font-urdu text-gray-600 mb-6">{urduTrainingTitle}</p>
            <p class="text-gray-600 mb-6">{trainingDescription}</p>
            <p class="text-gray-500 font-urdu leading-loose">{urduTrainingDescription}</p>
          </div>
          
          <div class="space-y-6">
            <div>
              <h3 class="font-semibold text-primary mb-4">Training Topics</h3>
              <div class="grid grid-cols-2 gap-3">
                {trainingTopics.map(topic => (
                  <div class="bg-cream rounded-lg p-3">
                    <div class="font-medium text-sm">{topic.name}</div>
                    <div class="text-xs font-urdu text-gray-500">{topic.urduName}</div>
                  </div>
                ))}
              </div>
            </div>
            
            <div>
              <h3 class="font-semibold text-primary mb-4">Training Includes</h3>
              <ul class="space-y-2">
                {trainingIncludes.map(item => (
                  <li class="flex items-start gap-2">
                    <span class="text-gold">✓</span>
                    <div>
                      <span class="text-sm text-gray-600">{item.text}</span>
                      <span class="block text-xs font-urdu text-gray-500">{item.urduText}</span>
                    </div>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer lang="en" />
</Layout>
