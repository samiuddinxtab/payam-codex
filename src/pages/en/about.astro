---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import aboutData from '../../content/en/about.json';
import aboutDataUr from '../../content/ur/about.json';

const { intro, regNumber, objectives } = aboutData;
---

<Layout 
  title="About Us - Payam-e-Seerat Trust"
  description="Learn about Payam-e-Seerat Trust, a registered Religious Educational & Welfare Trust based in Golconda, Hyderabad."
  lang="en"
>
  <Header lang="en" currentPage="about" />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-primary text-white py-16 lg:py-24 geo-pattern">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl lg:text-5xl font-bold mb-4">About Us</h1>
          <p class="text-2xl font-urdu text-gold">ہمارے بارے میں</p>
        </div>
      </div>
    </section>

    <!-- Introduction -->
    <section class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-cream rounded-2xl p-8 md:p-12">
          <p class="text-lg text-gray-700 leading-relaxed mb-6">{intro}</p>
          <p class="text-lg font-urdu text-gray-600 leading-loose text-right">{aboutDataUr.intro}</p>
          <div class="mt-6 pt-6 border-t border-gray-200">
            <span class="inline-block px-4 py-2 bg-primary text-white rounded-full text-sm font-medium">
              {regNumber}
            </span>
          </div>
        </div>
      </div>
    </section>

    <!-- Objectives -->
    <section class="py-16 bg-cream">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-primary mb-2">Our Objectives</h2>
          <p class="text-lg font-urdu text-gray-600">ہمارے مقاصد</p>
        </div>
        
        <div class="grid md:grid-cols-2 gap-6">
          {objectives.map((obj, index) => (
            <div class="bg-white rounded-xl p-6 shadow-sm card-hover">
              <div class="flex items-start gap-4">
                <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center flex-shrink-0">
                  <span class="text-primary font-bold">{index + 1}</span>
                </div>
                <div>
                  <h3 class="text-lg font-semibold text-primary mb-1">{obj.title}</h3>
                  <p class="text-sm font-urdu text-primary mb-3">{aboutDataUr.objectives[index].title}</p>
                  <p class="text-gray-600 text-sm mb-2">{obj.text}</p>
                  <p class="text-gray-500 text-sm font-urdu leading-relaxed">{aboutDataUr.objectives[index].text}</p>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer lang="en" />
</Layout>
