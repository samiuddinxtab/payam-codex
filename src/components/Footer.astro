---
interface Props {
  lang: string;
}

const { lang } = Astro.props;
const isUrdu = lang === 'ur';

const quickLinks = [
  { label: isUrdu ? 'ہوم' : 'Home', path: `/${lang}/` },
  { label: isUrdu ? 'ہمارے بارے میں' : 'About', path: `/${lang}/about/` },
  { label: isUrdu ? 'شعبہ جات' : 'Departments', path: `/${lang}/departments/` },
  { label: isUrdu ? 'کورسز' : 'Courses', path: `/${lang}/courses/` },
  { label: isUrdu ? 'اشاعت' : 'Publications', path: `/${lang}/publications/` },
  { label: isUrdu ? 'مدد' : 'Support', path: `/${lang}/support/` },
  { label: isUrdu ? 'رابطہ' : 'Contact', path: `/${lang}/contact/` },
];

const otherLang = isUrdu ? 'en' : 'ur';
const otherLangLabel = isUrdu ? 'English' : 'اردو';
---

<footer class="bg-primary-dark text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <div class="flex items-center gap-2 mb-4">
          <span class="text-3xl">☪</span>
          <div>
            <h3 class="font-bold text-lg">{isUrdu ? 'پیام سیرت ٹرسٹ' : 'Payam-e-Seerat Trust'}</h3>
            <p class="text-sm text-white/70">{isUrdu ? 'مذہبی تعلیمی و فلاحی ٹرسٹ' : 'Religious Educational & Welfare Trust'}</p>
          </div>
        </div>
        <p class="text-sm text-white/80 mb-4">
          {isUrdu 
            ? 'گولکنڈہ، حیدرآباد میں قائم۔ 150+ مکاتب، 200+ اساتذہ، 5000+ طلبہ کی خدمت۔'
            : 'Based in Golconda, Hyderabad. Serving 150+ maktabs, 200+ teachers, 5000+ students.'}
        </p>
        <p class="text-xs text-white/60">{isUrdu ? 'رجسٹریشن نمبر: 6/2026' : 'Reg. No. 6/2026'}</p>
      </div>
      
      <div>
        <h4 class="font-semibold mb-4">{isUrdu ? 'فوری روابط' : 'Quick Links'}</h4>
        <ul class="space-y-2">
          {quickLinks.map(link => (
            <li>
              <a href={link.path} class="text-sm text-white/80 hover:text-gold transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h4 class="font-semibold mb-4">{isUrdu ? 'رابطہ' : 'Contact'}</h4>
        <ul class="space-y-2 text-sm text-white/80">
          <li>Ali Ahmed Colony, Near Ali Ahmed Masjid</li>
          <li>Golconda, Hyderabad, Telangana</li>
          <li>Email: payameseerat@gmail.com</li>
          <li>Phone: 9550025666</li>
        </ul>
        <div class="mt-4 pt-4 border-t border-white/20">
          <a 
            href={`/${otherLang}/`} 
            class="text-sm text-gold hover:text-gold-light transition-colors"
          >
            {isUrdu ? 'Switch to English' : 'اردو میں دیکھیں'}
          </a>
        </div>
      </div>
    </div>
    
    <div class="mt-8 pt-8 border-t border-white/20 text-center text-sm text-white/60">
      <p>&copy; {new Date().getFullYear()} Payam-e-Seerat Trust. {isUrdu ? 'جملہ حقوق محفوظ ہیں۔' : 'All rights reserved.'}</p>
    </div>
  </div>
</footer>
